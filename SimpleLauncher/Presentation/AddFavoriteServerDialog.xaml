<Window x:Class="SimpleLauncher.Presentation.AddFavoriteServerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleLauncher.Presentation"
        mc:Ignorable="d"
        Title="Simple Launcher - Add new favorite server"
        WindowStyle="None"
        Height="130"
        Width="300"
        MaxWidth="350"
        Background="{StaticResource DarkBackgroundBrush}" 
        MinWidth="200" 
        MinHeight="120"
        MaxHeight="150">
	<Border Grid.Row="0"
        Background="{StaticResource SurfaceDarkBrush}"
        CornerRadius="8"
        Padding="15,10"
        Margin="1,5,1,5"
        Effect="{StaticResource ShadowSmall}">
        <Grid Margin="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="70*"/>
                <RowDefinition Height="30*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       Grid.ColumnSpan="3"
                       Grid.Row="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Text="Please enter server ip and port:"/>
            <TextBox    Grid.Column="1"
                        Grid.Row="2"
                        Style="{StaticResource WatermarkTextBox}"
                        MinWidth="150"
                        MaxWidth="300"
                        MinHeight="20"
                        MaxHeight="25"
                        VerticalAlignment="Top"
                        Tag="127.0.0.1:7777"
                        x:Name="_ipAddressTextBox"
                        x:FieldModifier="private"/>
            <TextBlock Grid.Column="0"
                       Grid.ColumnSpan="3"
                       Grid.Row="2"
                       Margin="0,5"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Visibility="Visible"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Text="Please enter server ip and port:"
                       x:Name="_statusTextBlock"
                       x:FieldModifier="private"/>
            <StackPanel Grid.Column="1"
                        Grid.Row="3"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Width="200">
                <Grid Margin="10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="50*"/>
                    </Grid.ColumnDefinitions>
            <Button     Grid.Column="0"
                        MinWidth="60"
                        MaxWidth="100"
                        MinHeight="30"
                        MaxHeight="60"
                        Margin="15,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="{StaticResource DarkBackgroundBrush}"
                        Foreground="{StaticResource TextPrimaryBrush}"
                        Content="Add" 
                        Click="Button_Click"/>
            <Button     Grid.Column="1"
                        MinWidth="60"
                        MaxWidth="100"
                        MinHeight="30"
                        MaxHeight="60"
                        Margin="15, 0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="{StaticResource DarkBackgroundBrush}"
                        Foreground="{StaticResource TextPrimaryBrush}"
                        Content="Cancel"
                        Click="Button_Click_1" />
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</Window>