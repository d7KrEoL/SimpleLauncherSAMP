<Window x:Class="SimpleLauncher.Presentation.GameClientInfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleLauncher.Presentation"
        mc:Ignorable="d"
        Title="GameClientInfoDialog" 
        MinHeight="275"
        MaxHeight="275"
        MinWidth="250"
        Width="370"
        MaxWidth="400"
        Background="{StaticResource DarkBackgroundBrush}"
        Opacity="0.8" Closing="Window_Closing">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
        <TextBlock FontSize="15"
                   Foreground="{StaticResource PrimaryBrush}"
                   Text="Game build data"
                   HorizontalAlignment="Center"/>
        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="10"
                   Foreground="{StaticResource TextSecondaryBrush}"
                   x:Name="_errorTextBlock"
                   x:FieldModifier="private"/>
        </StackPanel>
        <StackPanel Grid.Column="0"
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Orientation="Vertical">
            <TextBlock Text="Enter build name:"
                       HorizontalAlignment="Left"
                       Foreground="{StaticResource PrimaryBrush}"/>
            <TextBox
                Style="{StaticResource WatermarkTextBox}"
                Margin="0,10,0,0"
                Tag="Build name"
                Background="{StaticResource DarkBackgroundBrush}"
                Foreground="{StaticResource TextSecondaryBrush}"
                Width="115"
                Height="20"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                x:Name="_buildName"
                x:FieldModifier="private" 
                TextChanged="_buildName_TextChanged"/>
        </StackPanel>
        <StackPanel Grid.Column="0"
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Orientation="Vertical">
            <TextBlock Text="Enter build Version:"
                   Foreground="{StaticResource PrimaryBrush}"/>
            <TextBox 
                Style="{StaticResource WatermarkTextBox}"
                Margin="0,10,0,0"
                Tag="Build version"
                Background="{StaticResource DarkBackgroundBrush}"
                Foreground="{StaticResource TextSecondaryBrush}"
                Width="115"
                Height="20"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                x:Name="_buildVersion"
                x:FieldModifier="private" 
                TextChanged="_buildVersion_TextChanged"/>
        </StackPanel>
        <StackPanel Grid.Row="3"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    MinHeight="20">
                <TextBlock Width="30"
                           Foreground="{StaticResource PrimaryBrush}"
                           Text="Path:"/>
                <TextBlock MinWidth="240"
                           Height="30"
                           Foreground="{StaticResource PrimaryBrush}"
                           Text="{Binding ClientPath}"
                           x:Name="_gameBuildPath"
                           x:FieldModifier="private"
                           MouseLeftButtonUp="_gameBuildPath_MouseLeftButtonUp"/>
            </StackPanel>
            <Button Grid.Row="4"
                Grid.Column="0"
                Width="50"
                Height="30"
                HorizontalAlignment="Right"
                Margin="0,0,5,0"
                Background="{StaticResource SurfaceDarkBrush}"
                Foreground="{StaticResource PrimaryBrush}"
                Content="Enter" 
                Click="EnterButton_Click"
                x:Name="_enterButton"
                x:FieldModifier="private"/>
        <Button Grid.Row="4"
                Grid.Column="1"
                Width="50"
                Height="30"
                HorizontalAlignment="Left"
                Margin="5,0,0,0"
                Background="{StaticResource SurfaceDarkBrush}"
                Foreground="{StaticResource PrimaryBrush}"
                Content="Cancel" Click="CancelButton_Click_1"/>
    </Grid>
</Window>
